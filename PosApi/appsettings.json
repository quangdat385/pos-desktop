{
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Port=33306;Database=test_vn;User=root;Password=test_vn;SslMode=None;AllowPublicKeyRetrieval=True;Pooling=true;Min Pool Size=2;Max Pool Size=10;"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Debug"
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/info.log",
                                    "rollingInterval": "Day",
                                    "restrictedToMinimumLevel": "Information"
                                }
                            }
                        ],
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "@Level = 'Information'"
                                }
                            }
                        ]
                    }
                }
            },
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "logs/error.log",
                                    "rollingInterval": "Day",
                                    "restrictedToMinimumLevel": "Error"
                                }
                            }
                        ],
                        "Filter": [
                            {
                                "Name": "ByIncludingOnly",
                                "Args": {
                                    "expression": "@Level = 'Error'"
                                }
                            }
                        ]
                    }
                }
            }
        ]
    }
}